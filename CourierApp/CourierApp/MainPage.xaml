<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CourierApp"
             x:Class="CourierApp.MainPage">

    <StackLayout>
        <Label Text="User ID"/>
        <Entry x:Name="logInUser" Placeholder="Id"/>
        <Label Text="Password"/>
        <Entry x:Name="logInPass" Placeholder="Password" IsPassword="True"/>
        <Button x:Name="logInButton" Text="Log In" Clicked="logInButton_Clicked"/>
        <Label Text="Don't have an account yet?"/>
        <Button x:Name="registerButton" Text="Register" Clicked="registerButton_Clicked"/>
    </StackLayout>

</ContentPage>
