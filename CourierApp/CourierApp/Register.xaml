<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CourierApp.Register">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="First Name"/>
            <Entry x:Name="regFirstName" Placeholder="John"/>
            
            <Label Text="Last Name"/>
            <Entry x:Name="regLastName" Placeholder="Smith"/>
            
            <Label Text="Email"/>
            <Entry x:Name="regEmail" Placeholder="sample@gmail.com"/>

            <Label Text="Password"/>
            <Entry x:Name="regPassword" Placeholder="password" IsPassword="True"/>

            <Label Text="Repeat Password"/>
            <Entry x:Name="regPasswordRepeat" Placeholder="password" IsPassword="True"/>

            <Button x:Name="registerDone" Text="Create Account" Clicked="registerDone_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>